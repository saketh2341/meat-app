<section class="saved-address container mx-auto py-8">
    <div class="card"> 
        <p class="CardText">DELIVERY ADDRESS</p>
        <span><%=address.address%></span>
    </div>
    <div class="card">
        <p class="CardText">ORDER SUMMARY</p>
        <div class="pizza-list">
            <% for(let pizza of Object.values(session.cart.items)) { %>
           

            
            <div class="flex items-center my-8">
                <img class="w-24" src="/img/<%= pizza.item.image %>" alt="">
                <div class="flex-1 ml-4">
                    <h1><%= pizza.item.name %></h1>
                    <span><%= pizza.item.size %></span>
                    <h2>quantity:<%= pizza.qty %></h2>
                </div>
                

              
                <span id="price" class="font-bold text-lg">₹ <%= pizza.item.price * pizza.qty %></span>
               
            </div>
            <%  } %>

        </div>
    </div>
    <div class="card ">
        <p class="CardText">PAYMENT OPTION</p>
        <div class="relative w-1/2 ml-auto mb-4">
            <select id="paymentType" name="paymentType" class="block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded leading-tight focus:outline-none focus:shadow-outline">
              <option value="cod">Cash on delivery</option>
            
            </select>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
              <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
            </div>
          </div>
    </div>
    <div class="text-right py-4">
        <div>
            
            <span class="text-lg font-bold">Total Amount:</span>
            <span id="totalPrice"class="amount text-2xl font-bold ml-2">₹<%= session.cart.totalPrice %></span>
        </div>
        <div>
  
            <a href="/place/<%=address._id%>"
            class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Confirm Order</a>
        </div>

    </div>
   
</section>
